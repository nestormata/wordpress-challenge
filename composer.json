{
    "name": "nestormata/wordpress-challenge",
    "description": "Challenge WP plugin for Inpsyde",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Nestor Mata Cuthbert",
            "email": "nestor.mata@gmail.com"
        }
    ],
    "require": {
        "mustache/mustache": "^2.14",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Challenge\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Challenge\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "brain/monkey": "2.*",
        "phpunit/phpunit": "^9.0",
        "inpsyde/php-coding-standards": "^1.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "check": "vendor/bin/phpcs"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
